<div class="row">
 <div class="col-md-12">
 <h2>Employees <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2>
 <hr />
 <table border ="1">
    <tr>
        <th>Employees Num</th>
        <th>Full Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Manager ID</th>
        <th>Status</th>
        <th>Department</th>
        <th>Hire On</th>
    </tr>
    {{#each employees}}
        <tr>
            <td>{{employeeNum}}</td>
            <td><a href="/employee/{{employeeNum}}">{{firstName}} {{lastName}}</td>
            <td><a href="mailto:/employees/">{{email}}</a></td>
            <td>{{addressStreet}} {{addressCity}} {{addressState}} {{addressPostal}}</td>
            <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
            <td><a href = "/employees?status={{status}}">{{status}}</a></td>
            <td><a href ="/employees?department={{department}}">{{department}}</td>
            <td>{{hireDate}}</td>
            <td><a href="/employee/delete/{{employeeNum}}" class="btn btn-success pull-right">Remove</a></td>
        </tr>
    {{else}}
        <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
        </div>
    {{/each}}
 </table>
 </div>
</div>