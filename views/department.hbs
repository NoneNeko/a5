<div class="row">
 <div class="col-md-12">
    {{#each department}}
    
         <h2>{{departmentName}} Department: {{departmentId}} - Employee:
{{employeeNum}}</h2>
 <hr />
 <form method="post" action="/department/update">
 <div class="form-group">
 <label for="departmentId"></label>
 <input class="form-control" id="departmentId" name="departmentId" type="hidden"
value="{{departmentId}}" />
 </div>

 <div class="col-md-6">
 <div class="form-group">
 <label for="departmentName">Department Name:</label>
 <input class="form-control" id="departmentName" name="departmentName" type="text"
value="{{departmentName}}"/>
 </div>
 </div>

  <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
 </form>
 
 </div>
</div>